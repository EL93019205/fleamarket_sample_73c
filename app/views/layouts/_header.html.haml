.header
  .wrapper
    .top
      = link_to "#", class: "logo" do
        = image_tag asset_path("logo.png"), class: "logo__img"
      %form{class: "searchBox"}
        %input{class: "searchBox__input", placeholder: "キーワードから探す"}
        %button{class: "searchBox__button", type: "submit"}
          %img{src: "/assets/icon-search 1.png", class: "searchBox__button__img"}
    .bottom
      %ul{class: "nav"}
        %li{class: "nav__item nav__item--first"}
          = link_to "カテゴリー", "#", class: "category_button" 
        %li{class: "nav__item"}
          = link_to "ブランド", "#", class: "brand_button"
      .userNav
        = link_to "ログイン", "#", class: "userNav__item"
        = link_to "新規会員登録", "#", class: "userNav__item"