/ resourceとは？
/ →どのようなモデルが来ても大丈夫なようにするためにはresourceにする
/ どのようなモデル名かはresource_nameになる
/ asでresource_nameとするとparams[resource_name]で参照できるようになる
/ form_for(モデル) do f
/ autocompleteとは？

.users
  .users__container
    .users__container__top
      会員情報入力
    .users__container__bottom
      .users__container__bottom__center
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          / エラー文出力
          = render "users/shared/error_messages", resource: resource

          / ニックネーム
          .users__container__bottom__center__card
            = f.label :nickname, "ニックネーム", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :nickname,  autocomplete: "nickname", placeholder: "例)最強の前田", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / メールアドレス
          .users__container__bottom__center__card
            = f.label :email, class: "users__container__bottom__center__card--label"
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / パスワード
          .users__container__bottom__center__card
            = f.label :password, class: "users__container__bottom__center__card--label"
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / パスワード確認用
          .users__container__bottom__center__card
            = f.label :password_confirmation, class: "users__container__bottom__center__card--label"
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再度入力", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / お名前(全角)
          .users__container__bottom__center__card
            = f.label :name ,"お名前(全角)", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :family_name,  autocomplete: "family_name", placeholder: "例)前田", class: "users__container__bottom__center__card--input--half"
            = f.text_field :first_name,  autocomplete: "first_name", placeholder: "例)飛揚", class: "users__container__bottom__center__card--input--half"
            .users__container__bottom__center__card--required
              必須

          / お名前カナ(全角)
          .users__container__bottom__center__card
            = f.label :name_kana ,"お名前カナ(全角)", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :first_name_kana,  autocomplete: "family_name_kana", placeholder: "例)マエダ", class: "users__container__bottom__center__card--input--half"
            = f.text_field :family_name_kana,  autocomplete: "first_name_kana", placeholder: "例)ヒヨウ", class: "users__container__bottom__center__card--input--half"
            .users__container__bottom__center__card--required
              必須

          / 生年月日
          .users__container__bottom__center__card
            = f.label :birthday, "生年月日", class: "users__container__bottom__center__card--label"
            %br/
            = f.date_select :birthday, class: "users__container__bottom__center__card--input--tri", use_month_numbers: true, start_year: (Time.now.year - 150), end_year: (Time.now.year - 18), prompt: "--"
            .users__container__bottom__center__card--year
              年
            .users__container__bottom__center__card--month
              月
            .users__container__bottom__center__card--day
              日
            .users__container__bottom__center__card--required
              必須

          / 送付先お名前(全角)
          .users__container__bottom__center__card
            = f.label :d_name ,"送付先お名前(全角)", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :d_family_name,  autocomplete: "d_family_name", placeholder: "例)前田", class: "users__container__bottom__center__card--input--half"
            = f.text_field :d_first_name,  autocomplete: "d_first_name", placeholder: "例)飛揚", class: "users__container__bottom__center__card--input--half"
            .users__container__bottom__center__card--required
              必須

          / 送付先指名カナ(全角)
          .users__container__bottom__center__card
            = f.label :d_name_kana ,"送付先お名前カナ(全角)", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :d_first_name_kana,  autocomplete: "d_family_name_kana", placeholder: "例)マエダ", class: "users__container__bottom__center__card--input--half"
            = f.text_field :d_family_name_kana,  autocomplete: "d_first_name_kana", placeholder: "例)ヒヨウ", class: "users__container__bottom__center__card--input--half"
            .users__container__bottom__center__card--required
              必須

          / 郵便番号
          .users__container__bottom__center__card
            = f.label :zipcode, "郵便番号", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :zipcode, autocomplete: "zipcode", maxlength: "7", autocomplete: "d_first_name_kana", placeholder: "例)1234567", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / 都道府県
          .users__container__bottom__center__card
            = f.label :prefecture, "都道府県", class: "users__container__bottom__center__card--label"
            %br/
            = f.select :prefecture, User.prefectures.keys, {}, class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / 市区町村
          .users__container__bottom__center__card
            = f.label :city ,"市区町村", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :city, autocomplete: "city", placeholder: "例)東京都渋谷区恵比寿", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / 番地
          .users__container__bottom__center__card
            = f.label :address ,"番地", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :address, autocomplete: "address", placeholder: "例)1-3-1", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--required
              必須

          / マンション名・ビル名・部屋番号
          .users__container__bottom__center__card
            = f.label :building_name, "マンション名・ビル名・部屋番号", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :building_name, autocomplete: "building_name", placeholder: "例)タワマン52階", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--any
              任意

          / 電話番号
          .users__container__bottom__center__card
            = f.label :phone_number, "電話番号", class: "users__container__bottom__center__card--label"
            %br/
            = f.text_field :phone_number, autocomplete: "phone_number", maxlength: "11", autocomplete: "d_first_name_kana", placeholder: "例)09082882819", class: "users__container__bottom__center__card--input"
            .users__container__bottom__center__card--any
              任意

          / 送信ボタン
          .users__container__bottom__center__card
            = f.submit "登録", class: "users__container__bottom__center__card--submit"
